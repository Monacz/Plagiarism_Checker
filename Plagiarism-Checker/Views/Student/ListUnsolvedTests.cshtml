
@{
    ViewData["Title"] = "ListUnsolvedTests";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}


<div class="largeDarkDiv" style="flex-direction:column;">
    <h2>Невиконанані завдання:</h2>
    @foreach (var item in Model)
    {
        <div style="width:80%;height:180px;margin-bottom:20px;border:solid;border-width:1px">
            <div style="background-color:#d8d8d8">
                <p style="color:#000000">@item.NameOfDiscipline</p>
            </div>
            <p style="color:#d8d8d8; font-size:13px">@item.TaskAssignment.Requirenments</p>
            <p style="color:#555454; font-size:10px; justify-content:flex-end;">@item.Lector - @item.Time</p>

            <div style="display: flex;justify-content: center;margin-top:8px">
                <button style="font-size:6px; padding:0.0025em 0.75em; border:none;" type="submit" class="button2" onclick="location.href='@Url.Action("AddSolutionPage", "Student", new { id = item._Task.Id })'">Виконати</button>
                
            </div>
            <div style="clear:both;"></div>
        </div>
    }

    <button onclick="location.href='@Url.Action("Index", "Student")'" class="button2">НА ГОЛОВНУ</button>
</div>
