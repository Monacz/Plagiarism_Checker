@model List<Plagiarism_Checker.Models.Teacher.Subjects>

@{
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

<div class="largelightDiv" style="margin: 1em;
    padding: 1em;
    display: list-item;">
    <h2 style="margin-bottom: 10px;">Перелік дисциплін:</h2>
    @foreach (var item in Model)
    {
        <div style="width: 80%;
    height: 180px;
    margin-bottom: 20px;
    border: none;
    display: inline;">
            <p style="color: #000000; font-size: 15px;"> @item.NameOfDiscipline </p>
            <p style="color:#000000; font-size:15px; justify-content:flex-end;"> @item.Group - @item.Time </p>
            <div style="clear:both;"></div>
        </div>
    }
</div>

